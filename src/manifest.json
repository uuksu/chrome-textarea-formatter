{
	"manifest_version": 2,
	"name": "Chrome Textarea Formatter",
	"description": "Gives textareas basic code formatting abilities found in modern IDE.",
	"version": "0.4.0.0",
	"icons": {
		"128": "icon128.png",
		"48": "icon48.png",
		"16": "icon16.png"
	},
	"content_scripts": [ {
		"matches": [ "http://*/*", "https://*/*" ],
		"js": [ "jquery.js", "script.js" ],
		"all_frames": true
	} ],
	"background": {
		"scripts": ["background.js"]
	},
	"options_page": "options.html",
	"page_action": {
		"default_icon": {
			"16": "icon16.png"
		}
	},
	"permissions": [ "tabs" ]							
}